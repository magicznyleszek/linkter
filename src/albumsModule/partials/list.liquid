<div
  i-card
  ng-repeat="(decade, decadeAlbums) in albums.list | filter: albums.matchAlbum | groupBy: 'decade'"
>
  <h2 i-text="200% centered">[[ decade ]]</h2>

  <div
    i-album
    ng-repeat="album in decadeAlbums track by ::album.link"
  >
    <div>
      <a
        href="[[::album.link]]"
        i-album-title
        ng-bind="::album.title"
        target="_blank"
      ></a>

      <span i-album-stars ng-bind="::album.stars | humanizeStars"></span>
    </div>

    <div>
      <span ng-bind="::album.artist"></span>
      @
      <span ng-bind="::album.year"></span>
    </div>
  </div>
</div>
